<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_ffffff_yuanjiao_10dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="20dp"
        android:text="温馨提醒"
        android:textColor="@color/color_000000"
        android:textSize="@dimen/size_19" />

    <TextView
        android:id="@+id/tv_dialog_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="17dp"
        android:layout_marginRight="20dp"
        android:lineSpacingExtra="4dp"
        android:text="完整的个人名片可以帮助您收获更多伙伴哦，快去完善个人名片信息吧"
        android:textColor="@color/color_000000"
        android:textSize="@dimen/size_14" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_dialog_cancel"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textSize="@dimen/size_14" />

        <View
            android:id="@+id/view_dialog_cancel"
            android:layout_width="1px"
            android:layout_height="44dp"
             />

        <TextView
            android:id="@+id/tv_dialog_ok"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="立即完善"
            android:textSize="@dimen/size_14" />


    </LinearLayout>

</LinearLayout>