<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="290dp"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_ffffff_yuanjiao_10dp"
    android:orientation="vertical">

    <com.yc.basis.widget.MediumTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:text="温馨提示"
        android:textColor="@color/color_000000"
        android:textSize="@dimen/size_21" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:lineSpacingExtra="5dp"
            android:text="开通会员即可享受app全部功能\n确定要取消吗？"
            android:textColor="@color/color_000000"
            android:textSize="@dimen/size_18" />

        <ImageView
            android:layout_width="59dp"
            android:layout_height="87dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:src="@drawable/huangguan" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginTop="45dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_dialog_ok"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="18dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="狠心放弃"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/size_15" />

            <TextView
                android:id="@+id/tv_dialog_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="18dp"
                android:layout_weight="1.1"
                android:background="@drawable/bg_main_50dp"
                android:gravity="center"
                android:text="我再想想"
                android:textColor="@color/color_FFFFFF"
                android:textSize="@dimen/size_16" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>