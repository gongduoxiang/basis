<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_ffffff_yuanjiao_10dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="15dp"
        android:hint="温馨提示"
        android:textColor="@color/color_000000"
        android:textColorHint="@color/color_000000"
        android:textSize="@dimen/size_16" />

    <TextView
        android:id="@+id/tv_dialog_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:text="描述"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/size_14" />

    <View
        android:id="@+id/view_dialog_line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_F3F3F3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:id="@+id/tv_dialog_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="取消"
            android:textColor="@color/color_333333"
            android:textColorHint="@color/color_333333"
            android:textSize="@dimen/size_14" />

        <View
            android:id="@+id/view_dialog_line2"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/color_F3F3F3" />

        <TextView
            android:id="@+id/tv_dialog_ok"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="确定"
            android:textColor="@color/main_color"
            android:textColorHint="@color/main_color"
            android:textSize="@dimen/size_14" />

    </LinearLayout>

</LinearLayout>